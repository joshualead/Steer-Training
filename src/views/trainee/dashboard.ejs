<%-include('header')%>
<body>
  <div class="m-4">
    <div class="card m-2" style="background-color: #FFDEB4;">
      <div class="card-body">
        <h3>Courses</h3>
      </div>
    </div>
  </div>
  <div class="m-4">
    <div class="m-4">
      <div class="card m-4">
        <div class="card-body">
          <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item" role="presentation">
              <button class="nav-link active" id="pills-ongoing-tab" data-bs-toggle="pill" data-bs-target="#pills-graph" type="button" role="tab" aria-controls="pills-graph" aria-selected="true">Ongoing Courses</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="pills-completed-tab" data-bs-toggle="pill" data-bs-target="#pills-table" type="button" role="tab" aria-controls="pills-table" aria-selected="false">Completed</button>
            </li>
          </ul>
          <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active m-4" id="pills-graph" role="tabpanel" aria-labelledby="pills-ongoing-tab" tabindex="0">
              <% var counting = 0%>
              <% for(var i=0; i<courseArr.length; i++) {%>
              <%if(courseArr[i].assigned_status===1){%>
                <% counting = counting + 1 %>
              <div class="card w-100 mb-2" style="background-color: #eceeca;">
                <div>
                  <div class="card-body float-start w-75">
                    <div class="w-50 float-start" style="font-size: large;font-weight: bold;"><%=counting%> | <%=courseArr[i].course_id%> - <%=courseArr[i].course_name%></div>
                    <div class="float-start"><%=courseArr[i].description%></div>
                  </div>
                  <div class="float-end">          
                    <a href="/trainee/tasks/<%=token%>/<%=courseArr[i].course_id%>" class="btn btn-outline-primary m-2">View tasks</a>
                  </div>
                </div>
              </div>
              <%}%>
              <%}%>               
            </div>
            <div class="tab-pane fade m-4" id="pills-table" role="tabpanel" aria-labelledby="pills-completed-tab" tabindex="0">
              <% var counting = 0%>
              <% for(var i=0; i<courseArr.length; i++) {%>
              <%if(courseArr[i].assigned_status===2){%>
                <% counting = counting + 1 %>
              <div class="card w-100 mb-2" style="background-color: #eceeca;">
                <div>
                  <div class="card-body float-start w-75">
                    <div class="w-50 float-start" style="font-size: large;font-weight: bold;"><%=counting%> | <%=courseArr[i].course_id%> - <%=courseArr[i].course_name%></div>
                  <div class="float-start"><%=courseArr[i].description%></div>
                  </div>
                  <div class="float-end">          
                    <a href="/trainee/tasks/<%=token%>/<%=courseArr[i].course_id%>" class="btn btn-outline-primary m-2">View tasks</a>
                  </div>
                </div>
              </div>
              <%}%>
              <%}%>
            </div>
          </div>
        </div>
      </div>
      
    </div>
  </div>
    
  
  
</body>
<%-include('footer')%>