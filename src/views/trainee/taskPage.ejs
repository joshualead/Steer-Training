<%-include('header')%>

  <body>
    <div class="card m-4">
      <div class="card-body">
        <h3 class="float-start">Tasks<h3>
      </div>
    </div>

    <div class="m-4">
        <% for(var i=0; i<taskArr.length; i++) {%>
          <div class="card w-100 mb-2" style="background-color: #F9E4C8;">
            <div>
              <div class="card-body float-start w-75">
                <div class="w-25 float-start" style="font-size: large;font-weight: bold;"> <%=taskArr[i].task_name%></div>
                <div class="float-start"><%=taskArr[i].description%></div>
              </div>
              <div>
              <a href="/trainee/dotask/<%=token%>/<%=courseid%>/<%=taskArr[i].task_id%>"
                class="btn btn-outline-primary m-2 float-end">Complete the submission</a>
              </div>
            </div>
          </div>
          <%}%>
    </div>



  </body>
  <%-include('footer')%>